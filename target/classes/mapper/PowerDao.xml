<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tech.bilian.dao.PowerDao">
    <select id="queryPower" parameterType="tech.bilian.pojo.Power" resultType="tech.bilian.pojo.Power">
        select  song_id, user_id, time

        from power

        <where>

            <if test="power!=null and power.songId!=null and power.userId==null">
                and song_id = #{power.songId}
            </if>

            <if test="power!=null and power.songId==null and power.userId!=null">
                and user_id = #{power.userId}
            </if>

            <if test="power!=null and power.songId!=null and power.userId!=null">
                and song_id = #{power.songId}
                and user_id = #{power.userId}
            </if>
        </where>
    </select>

    <insert id="insertPower" parameterType="tech.bilian.pojo.Power">
        insert into power(song_id, user_id, time)

        values (#{power.songId}, #{power.userId}, #{power.time})
    </insert>

</mapper>